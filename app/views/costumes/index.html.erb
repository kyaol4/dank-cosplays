
<div class="container d-sm-flex justify-content-start mt-3 ms-5">
  <%= link_to "", root_path, class:"fas fa-angle-left fs-1 align-self text-decoration-none text-dark me-3" %>
  <h2>BROWSING</h2>
</div>

<div class="container mx-0">
  <div class="cards">
    <% @costumes.each do |costume| %>
      <div class="index-card">
      <% if costume.photo.attached? %>
        <%=cl_image_tag costume.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
      <%= image_tag "https://www.google.com/url?sa=i&url=https%3A%2F%2Fknowyourmeme.com%2Fphotos%2F1419425-cosplay&psig=AOvVaw2fEvcYHFaeZkbndgxVr92b&ust=1645687310252000&source=images&cd=vfe&ved=0CAsQjRxqFwoTCPCZlY6llfYCFQAAAAAdAAAAABAD" %>
      <% end %>
        <div class="index-card-infos">
          <h2><%= costume.name.upcase %></h2>
          <p>Size: <%= costume.size %></p>
        </div>
        <div class="price-card">
          <h2>Â¥ <%= costume.price %></h2><p>per day</p>
          <p><%= link_to "", costume_path(costume), class:"card-link" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
