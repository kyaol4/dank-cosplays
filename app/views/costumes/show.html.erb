<h2><%= @costume.name %></h2>
<div class="cards">
  <div class="card-trip">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="card-trip-infos">
      <div>
        <p><%= @costume.size %></p>
      </div>
      <h2 class="card-trip-pricing"><%= @costume.price%>円</h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
  <div class="card-trip">
    <%= simple_form_for [@costume, @booking] do |f| %>
      <h2><%= @costume.name %></h2>
      <p><%= @costume.size %></p>
      <p><%= @costume.price%> 円 </p>
      <%= f.input :start_date, html5: true %>
      <%= f.input :end_date, html5: true %>
      <%# <% if policy(costume).user_is_owner? %>
      <%# <%= f.input :status, collection: Booking.statuses.keys, include_blank: false %>
      <%# <% end %>
      <%= f.submit class: 'btn btn-primary mt-2' %>
    <% end %>
  </div>
</div>
<hr>
<%= link_to 'Back to costumes list', costumes_path %>
